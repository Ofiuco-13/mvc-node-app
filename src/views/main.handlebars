<div class="row">
  <div class="col-6"><h1>Teams</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/form" type="button" class="btn btn-primary align-self-center">+
      add teams</a>
  </div>
</div>
<div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">-</th>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">ID</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>
    {{#each teams}}
      <tbody>
        <tr>
          <th scope="row"></th>
          <td><img
              src="/images/{{{this.crestUrl}}}"
              class="img-fluid"
              width="60px"
              height="60px"
              alt="teamImg"
            /></td>
          <td>{{{this.name}}}</td>
          <td>{{{this.id}}}</td>
          <td class="text-end">
            <a
              href="/view/{{{this.id}}}"
              type="button"
              class="btn btn-small btn-success"
            ><i class="bi bi-eye"></i>
              View</a>
            <a
              href="/edit/{{{this.id}}}"
              type="button"
              class="btn btn-small btn-primary"
            ><i class="bi bi-pencil"></i>
              Edit</a>
            <a
              href="/delete/{{{this.id}}}"
              type="button"
              class="btn btn-small btn-danger"
            ><i class="bi bi-person-x"></i>
              Delete</a>
          </td>
        </tr>
      </tbody>

    {{/each}}
  </table>
</div>